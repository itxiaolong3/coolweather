<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#80D4F6"
        android:drawableLeft="@drawable/delete"
        android:paddingLeft="15dp"
        android:drawablePadding="-20dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您确点删除如下的内容？"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingRight="10dp"
            android:text="录入时间："/>
        <TextView
            android:id="@+id/tv_delete_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="2017年3月1日"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingRight="10dp"
            android:text="消费金额："/>
        <TextView
            android:id="@+id/tv_delete_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingRight="10dp"
            android:text="详细备注："/>
        <TextView
            android:id="@+id/tv_delete_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="买了条内裤"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_delete_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:text="  果断删除  "/>

    <Button
        android:id="@+id/bt_delete_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="先留着吧"/>

</LinearLayout>